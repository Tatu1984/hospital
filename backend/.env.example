# ========================================
# Hospital ERP Backend Configuration
# ========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=4000

# ========================================
# DATABASE CONFIGURATION (NeonDB)
# ========================================
# Get these from your NeonDB dashboard at https://neon.tech
#
# DATABASE_URL: Pooled connection string (for serverless)
# - Use this for most queries
# - Format: postgresql://user:password@host/database?sslmode=require
#
# DIRECT_URL: Direct connection string (for migrations)
# - Use this for schema migrations only
# - Format: postgresql://user:password@host/database?sslmode=require
#
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# For local development with Docker:
# DATABASE_URL="postgresql://hms_user:hms_pass@localhost:5432/hms_db?schema=public"
# DIRECT_URL="postgresql://hms_user:hms_pass@localhost:5432/hms_db?schema=public"

# ========================================
# JWT CONFIGURATION
# ========================================
# IMPORTANT: Generate secure random keys for production!
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# SECURITY
# ========================================
# CORS_ORIGIN: Frontend URL (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_DIR=./logs

# ========================================
# SESSION
# ========================================
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Set EMAIL_PROVIDER to: smtp, sendgrid, or mock (default)
EMAIL_PROVIDER=mock

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@hospital.com

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# ========================================
# SMS CONFIGURATION
# ========================================
# Set SMS_PROVIDER to: twilio, msg91, or mock (default)
SMS_PROVIDER=mock

# Twilio Configuration (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 Configuration (if SMS_PROVIDER=msg91)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=HOSPTL
MSG91_TEMPLATE_ID=your-template-id

# ========================================
# FILE UPLOAD
# ========================================
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# ========================================
# PAYMENT GATEWAY - RAZORPAY
# ========================================
# Get your keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret-key
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ========================================
# APPOINTMENT REMINDERS
# ========================================
# Set to 'false' to disable automatic reminders
# Note: In Vercel serverless, use Vercel Cron Jobs instead
ENABLE_REMINDERS=true

# ========================================
# ERROR MONITORING (Optional)
# ========================================
# SENTRY_DSN=your-sentry-dsn

# ========================================
# VERCEL SPECIFIC (Auto-set by Vercel)
# ========================================
# VERCEL=1 (automatically set by Vercel)
