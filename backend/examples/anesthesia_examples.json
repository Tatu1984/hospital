  "completeWorkflow": {
    "description": "Complete anesthesia workflow from pre-op to recovery",
    "steps": [
      {
        "step": 1,
        "action": "Create anesthesia record",
        "endpoint": "POST /api/surgeries/:id/anesthesia",
        "note": "Document pre-operative assessment and start time"
      },
      {
        "step": 2,
        "action": "Update with induction agents",
        "endpoint": "PUT /api/surgeries/:id/anesthesia",
        "note": "Add agents used for induction"
      },
      {
        "step": 3,
        "action": "Add baseline vitals",
        "endpoint": "POST /api/surgeries/:id/vitals",
        "note": "Record vitals immediately after induction"
      },
      {
        "step": 4,
        "action": "Update with airway management",
        "endpoint": "PUT /api/surgeries/:id/anesthesia",
        "note": "Document intubation and ventilator settings"
      },
      {
        "step": 5,
        "action": "Add periodic vitals",
        "endpoint": "POST /api/surgeries/:id/vitals",
        "note": "Record vitals every 5-15 minutes throughout surgery"
      },
      {
        "step": 6,
        "action": "Record any complications",
        "endpoint": "POST /api/surgeries/:id/anesthesia/complications",
        "note": "Document anesthesia complications if they occur"
      },
      {
        "step": 7,
        "action": "Update fluid balance",
        "endpoint": "PUT /api/surgeries/:id/anesthesia",
        "note": "Update IV fluids, blood products, urine output"
      },
      {
        "step": 8,
        "action": "Record surgery complications",
        "endpoint": "POST /api/surgeries/:id/complications",
        "note": "Document surgical complications if they occur"
      },
      {
        "step": 9,
        "action": "Add implants used",
        "endpoint": "POST /api/surgeries/:id/implants",
        "note": "Record all implants/devices used"
      },
      {
        "step": 10,
        "action": "Complete anesthesia record",
        "endpoint": "PUT /api/surgeries/:id/anesthesia",
        "note": "Add recovery notes, post-op instructions, and end time"
      }
    ]
  }
